{
  "name": "tram-one",
  "version": "8.1.1",
  "description": "ðŸš‹ Batteries Included View Framework",
  "main": "dist/tram-one.cjs.js",
  "commonjs": "dist/tram-one.cjs.js",
  "umd": "dist/tram-one.umd.js",
  "files": [
    "dist/tram-one.cjs.js",
    "dist/tram-one.umd.js"
  ],
  "scripts": {
    "lint": "xo",
    "build": "npm run build:cjs && npm run build:umd",
    "postbuild": "npm run build:badges",
    "build:cjs": "rollup -c configs/rollup.config.cjs.js",
    "build:umd": "rollup -c configs/rollup.config.umd.js",
    "build:badges": "node dev-scripts/build-size-badges.js",
    "prebuild:site": "rm -rf docs/website",
    "build:site": "docma -c configs/docma.json",
    "watch-src:site": "watch \"npm run build:site\" src",
    "watch-config:site": "watch \"npm run build:site\" configs",
    "watch-guides:site": "watch \"npm run build:site\" docs/guides",
    "watch:lint": "watch \"npm run lint\" src",
    "watch:build": "watch \"npm run build\" src",
    "prepublish:site": "rm -rf docs/website && npm run build:site",
    "publish:site": "surge docs/website --domain https://tram-one.io",
    "build:ssl": "cat .ssl/surge.crt .ssl/tram-one_io.crt .ssl/surge.key  > .ssl/surge.pem",
    "prepublish:ssl": "npm run build:ssl",
    "publish:ssl": "surge ssl --pem .ssl/surge.pem --domain tram-one.io",
    "clean": "git clean -Xdf",
    "test": "jest --watch",
    "posttest": "npm run lint",
    "test:ci": "jest",
    "integration-test": "node integration-tests/run-tests.js",
    "start": "npm i && npm run build",
    "restart": "npm run clean && npm start"
  },
  "author": {
    "name": "Jesse Jurman",
    "email": "j.r.jurman@gmail.com",
    "url": "https://github.com/jrjurman"
  },
  "keywords": [
    "frontend",
    "framework",
    "client",
    "server",
    "ssr",
    "browser",
    "tram-one",
    "hover-engine",
    "tram",
    "one"
  ],
  "repository": "https://github.com/Tram-One/tram-one",
  "license": "MIT",
  "dependencies": {
    "assert": "^1.4.1",
    "belit": "^4.1.5",
    "hover-engine": "^2.0.2",
    "hyperz": "^4.0.1",
    "ninlil": "^2.0.0",
    "rlite-router": "^2.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "tatermorph": "^7.0.0",
    "url-listener": "^2.0.0",
    "use-url-params": "^1.0.0"
  },
  "devDependencies": {
    "chalk": "^2.4.2",
    "docma": "^3.2.2",
    "eslint-config-tram-one": "^3.0.0",
    "express": "^4.17.1",
    "http-server": "^0.11.1",
    "inquirer": "^5.2.0",
    "internal-ip": "^1.2.0",
    "ip": "^1.1.5",
    "jest": "^24.5.0",
    "nightmare": "^3.0.2",
    "opn": "^5.0.0",
    "rollup": "^1.6.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-sizes": "^0.5.1",
    "surge": "^0.20.5",
    "watch": "^1.0.2",
    "xo": "0.25.3"
  },
  "xo": {
    "extends": [
      "tram-one"
    ],
    "rules": {
      "valid-jsdoc": 0,
      "capitalized-comments": 0,
      "new-cap": 0,
      "unicorn/no-process-exit": 0
    }
  }
}
